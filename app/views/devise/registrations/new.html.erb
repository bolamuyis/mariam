<div class="container ">
  <div class="column is-three-fifths is-offset-one-fifth"> 
    <div class="box">
      <div class="content has-text-centered">
        <h1 class="title is-3 has-text-dark">Sign up</h1>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email Address', class: 'input' %>
              </div>
              <div class="field">
                <% if @minimum_password_length %>
                <% @minimum_password_length %>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" , placeholder: 'Password (6 characters minimum)', class: 'input' %>
              </div>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation', class: 'input' %>
              </div>
              <div class="actions">
                <%= f.submit "Submit", class: "button is-dark is-medium" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


      
